@{
    Layout = "_AdminLayout";
}

<div class="px-4 mt-4 min-vh-100">
    <h1 class="text-center mb-5">Dashboard</h1>

    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Faculties</h5>
                    <canvas id="facultiesChart" style="height: 200px;"></canvas>
                </div>
            </div>
        </div>

        <div class="col-lg-4 mb-4">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Total User Accounts</h5>
                    <canvas id="usersChart" style="height: 200px;"></canvas>
                </div>
            </div>
        </div>

        <div class="col-lg-4 mb-4">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <h5 class="card-title">Total Semesters</h5>
                    <canvas id="semestersChart" style="height: 200px;"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Quick Links</h5>
                    <a href="#" class="btn btn-primary mb-2">Manage Faculties</a>
                    <a href="#" class="btn btn-primary mb-2">Manage User Accounts</a>
                    <a href="#" class="btn btn-primary mb-2">Manage Semesters</a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Recent Activity Feed</h5>
                    <ul class="list-group">
                        <li class="list-group-item">[Activity 1]</li>
                        <li class="list-group-item">[Activity 2]</li>
                        <li class="list-group-item">[Activity 3]</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Sample data for charts (replace with actual data)
        var facultiesData = [30, 20, 10];
        var usersData = [50, 40, 30];
        var semestersData = [20, 15, 25];

        // Create charts
        var facultiesChart = new Chart(document.getElementById('facultiesChart'), {
            type: 'pie',
            data: {
                labels: ['Faculty A', 'Faculty B', 'Faculty C'],
                datasets: [{
                    data: facultiesData,
                    backgroundColor: ['#FF6384', '#36A2EB', '#FFCE56']
                }]
            }
        });

        var usersChart = new Chart(document.getElementById('usersChart'), {
            type: 'bar',
            data: {
                labels: ['Student', 'Teacher', 'Student'],
                datasets: [{
                    label: 'Number of Users',
                    data: usersData,
                    backgroundColor: '#4CAF50'
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        var semestersChart = new Chart(document.getElementById('semestersChart'), {
            type: 'doughnut',
            data: {
                labels: ['Semester 1', 'Semester 2', 'Semester 3'],
                datasets: [{
                    data: semestersData,
                    backgroundColor: ['#FF6384', '#36A2EB', '#FFCE56']
                }]
            }
        });
    </script>
}
