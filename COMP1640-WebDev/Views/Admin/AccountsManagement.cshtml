@{
    Layout = "_AdminLayout";
}
<style>
    /* Add 3D effect and shadow to the table */
    .table-3d {
        border-collapse: separate;
        border-spacing: 0;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1), 0 6px 20px rgba(0, 0, 0, 0.19);
        transition: transform 0.3s ease;
    }

        .table-3d:hover {
            transform: rotateY(10deg);
        }

        .table-3d th,
        .table-3d td {
            border: 1px solid #dddddd;
            padding: 8px;
            background-color: #ffffff;
        }

        .table-3d th {
            background-color: #f2f2f2;
        }
 
    .action-buttons {
        margin-bottom: 20px;
    }

        .action-buttons .btn {
            margin-right: 10px;
        }

    .search-box {
        margin-bottom: 20px;
    }

    .admin-heading {
        font-size: 2em;
        text-align: center;
        margin-bottom: 20px;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        width:100%;
        background-color: #f2f2f2; /* Màu nền */
        padding: 5px; /* Khoảng cách giữa nội dung và viền */
        border: 2px solid #ddd; /* Đường viền */
        border-radius: 5px; /* Bo tròn viền */
        box-shadow: 0 0 2px rgba(0, 0, 0, 0.3); /* Hiệu ứng bóng đổ */
        display: inline-block; /* Hiển thị là khối cố định */
        margin: 0 auto; /* Căn giữa theo chiều ngang */
        text-align: center; /* Căn giữa nội dung */
        transform: translateZ(0); /* Hiệu ứng 3D */
    }
    .d-flex{
        padding-top:5px;
        padding-bottom:5px;
        width:100%;
    }

    .d-flex form {
            margin-right: 480px !important;
    }

    .btn-custom {
        padding: 0.10rem 0.7rem; /* Kích thước padding cho nút */
        font-size: 0.875rem; /* Kích thước font chữ */
        line-height: 1.5; /* Độ cao của dòng chữ */
    }

   
   
</style>

<div class="px-4 mt-4 min-vh-100">
    <h1 class="admin-heading">Accounts Management</h1>
    <div class="d-flex">
        <form class="d-flex me-2" role="search">
            <!-- Thêm lớp me-2 để tạo khoảng cách giữa form và nút button -->
            <div class="input-group">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-primary btn-sm" type="submit">
                    <i class="bi bi-search ">Search</i> <!-- Icon search được thêm vào nút -->
                </button>
            </div>
        </form>
        <button type="button" class="btn btn-primary btn-custom">
            <i class="bi bi-plus-circle">Add</i>

        </button>
    </div>
    <div class="table-responsive">
        <table class="table table-3d table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Faculty</th>
                    <th>Role</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <!-- Sample Data -->
                <tr>
                    <td>1</td>
                    <td>John Doe</td>
                    <td>john@example.com</td>
                    <td>Faculty 1</td>
                    <td>Admin</td>
                    <td class="d-flex justify-content-center">
                        <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#actionModal">
                            <i class="bi bi-gear"></i> Select Action
                        </button>
                    </td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>Jane Smith</td>
                    <td>jane@example.com</td>
                    <td>Faculty 2</td>
                    <td>User</td>
                    <td class="d-flex justify-content-center">
                        <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#actionModal">
                            <i class="bi bi-gear"></i> Select Action
                        </button>
                    </td>
                </tr>
                <!-- More rows can be added dynamically or fetched from backend -->
            </tbody>
        </table>
    </div>


    <!-- Modal -->
    <div class="modal fade" id="actionModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Select Action</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Add your action options here -->
                    <button class="btn btn-primary btn-sm"><i class="bi bi-pencil-square"></i> Edit</button>
                    <button class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Delete</button>
                </div>
            </div>
        </div>
    </div>


</div>
